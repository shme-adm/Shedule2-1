<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">     
        @Html.ActionLink("ЛОГО", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })       
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Расписание", "Shedule", "Home", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Отчеты", "Reports", "Home", new { @class = "nav-link" })</li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-calendar" aria-hidden="true"></i> Справочники
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Предметы", "Subjects", "Home", new { @class = "dropdown-item" })
                        @Html.ActionLink("Типы занятий", "TypeOfClasses", "Home", new { @class = "dropdown-item" })
                        @Html.ActionLink("Кабинеты", "Cabinets", "Home", new { @class = "dropdown-item" })
                        @Html.ActionLink("Группы", "Groups", "Home", new { @class = "dropdown-item" })
                        @Html.ActionLink("Отделения", "Offices", "Home", new { @class = "dropdown-item" })                        
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                       Учетные записи
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Пользователи", "Users", "Home", new { @class = "dropdown-item" })
                        @Html.ActionLink("Преподаватели", "Teachers", "Home", new { @class = "dropdown-item" })
                    </div>
                </li>                   
            </ul>
    </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
