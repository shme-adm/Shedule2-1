@model Subjects_groups
@using Shedule.Models
@{
    ViewBag.Title = "Предметы";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewBag.Message</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button class="btn btn-sm btn-outline-secondary">
            @*<span data-feather="plus-circle"></span>*@
            @Html.ActionLink("Новая запись", "Create", "Subjects", new { }, new { @class = "viewDialog", data_dialog_title = "Создание модели" })
        </button>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-light">
        <thead>
            <tr class="d-flex">
                <th class="col-1" scope="col">№</th>
                <th class="col-8" scope="col">Наименование</th>
                <th class="col-1" scope="col"></th>
                <th class="col-1" scope="col"></th>
                <th class="col-1" scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1;}
            @foreach (var item in ViewBag.Subjects_groups)
            {
            <tr class="d-flex">
                <th class="col-1" scope="row">@i</th>
                <td class="col-8" scope="row">@item.Name</td>
                <th class="col-1">@Html.ActionLink("Добавить тему", "Create_subject", "Subjects", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Добавить тему" })</th>
                <td class="text-right col-1">
                    @*<span data-feather="edit"></span>*@
                    @Html.ActionLink("Редактировать", "Edit", "Subjects", new { id = item.Id },
                   new { @class = "viewDialog", data_dialog_title = "Редактирование модели" })
                </td>
                <td class="text-right col-1">
                    @Html.ActionLink("Удалить", "Delete", "Subjects", new { id = item.Id },
                   new { @class = "viewDialog", data_dialog_title = "Удаление модели" })
                </td>
                @*<td class="col">@item.Units.Count</td>*@
            </tr> 
                foreach(var item_sb in item.Subjects)
                {
                    <tr class="d-flex">
                        <td class="col-1"></td>
                        <td class="col-8">@item_sb.Name</td>
                        <td class="col-1"></td>
                        <td class="col-1"></td>
                        <td class="col-1"></td>
                    </tr>
                }
        
                i++;
            }
        </tbody>
    </table>


</div>

