@model Cabinets
@using Shedule.Models
@{
    ViewBag.Title = "Кабинеты";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewBag.Message</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button class="btn btn-sm btn-outline-secondary">
            @*<span data-feather="plus-circle"></span>*@
            @Html.ActionLink("Новая запись", "CreateCabinets", "Directories", new { }, new { @class = "viewDialog", data_dialog_title = "Создание модели" })
        </button>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th class="" scope="col">№</th>
                <th class="col" scope="col">Наименование</th>
                <th class="" scope="col">Здание</th>            
                <th class="" scope="col">Комментарий</th>
                <th class="" scope="col"></th>
                <th class="" scope="col"></th>
            </tr>
        </thead>
        @{ int i = 1;}
        @foreach (var item in ViewBag.Cabinets)
        {
            <tr>
                <th class="" scope="row">@i</th>
                <td class="col">@item.Name</td>
                <td class="">@item.Buildings.Name</td>
                <td class="">@item.Comment</td>
                <td class="text-right">
                    @*<span data-feather="edit"></span>*@
                    @Html.ActionLink("Редактировать", "EditCabinets", "Directories", new { id = item.Id },
                          new { @class = "viewDialog", data_dialog_title = "Редактирование модели" })
                </td>
                <td class="text-right">
                    @Html.ActionLink("Удалить", "DeleteCabinets", "Directories", new { id = item.Id },
                          new { @class = "viewDialog", data_dialog_title = "Удаление модели" })
                </td>
            </tr>
            i++;
        }
    </table>
</div>


